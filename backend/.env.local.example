# TalentSol Backend - Local Development Environment
# Copy this file to .env.local and update the values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/talentsol"
REDIS_URL="redis://localhost:6379"

# Authentication
JWT_SECRET="your-jwt-secret-key-here"
JWT_EXPIRES_IN="24h"

# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN="http://localhost:8080"

# WebSocket Configuration
WEBSOCKET_PORT=9001
WEBSOCKET_CORS_ORIGIN="http://localhost:8080"

# XGBoost Local Development Configuration
XGBOOST_LOCAL_DEVELOPMENT=true
XGBOOST_MODEL_PATH="./backend/ml-models/decision-tree/best_performing_model_pipeline.joblib"
XGBOOST_PYTHON_WRAPPER="./backend/ml-models/integration/xgboost_predict_wrapper.py"
XGBOOST_PYTHON_PATH="./backend/ml-models/shared/venv/bin/python"
XGBOOST_VENV_PATH="./backend/ml-models/shared/venv"

# Python Environment (automatically set by yarn xgboost:setup)
PYTHON_PATH="./backend/ml-models/shared/venv/bin/python"
VIRTUAL_ENV="./backend/ml-models/shared/venv"

# ML Model Configuration
ML_PROCESSING_ENABLED=true
ML_BATCH_SIZE=20
ML_PROCESSING_INTERVAL="*/10 * * * *"
ML_MAX_RETRIES=3
ML_RETRY_DELAY=5000

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE="logs/talentsol-backend.log"

# Email Configuration (optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@talentsol.com"

# File Upload Configuration
UPLOAD_DIR="uploads"
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="pdf,doc,docx,txt"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Development Tools
ENABLE_SWAGGER=true
ENABLE_PLAYGROUND=true
ENABLE_INTROSPECTION=true

# Local Package Management
PACKAGE_MANAGER=yarn
USE_LOCAL_PACKAGES=true
LOCAL_PYTHON_ENV=true
